<?php

function calibre_install() {
  $menu = array(
    'title'	=> t('Library'),
    'menu_name'	=> 'calibre-library',
    'description'  => 'Calibre library',
  );
 
  menu_save($menu);
}


function calibre_uninstall() {
  menu_delete_links('calibre-library');
  menu_delete(array('menu_name' => 'calibre-library') );
}
